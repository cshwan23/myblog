{{>layouts/header}}

<!-- jumbotron-->
<div class="jumbotron">
    <h1>article 상세보기</h1>
    <hr>
    <p>articles/show.mustache</p>
</div>
<!-- table -->
<table class="table table-hover">
    {{#articles}}
        <tbody>
        <tr>
            <th>글번호</th>
            <th>{{id}}</th>
        </tr>
        <tr>
            <th>작성자</th>
            <th>{{author}}</th>
        </tr>
        <tr>
            <th>제목</th>
            <th>{{title}}</th>
        </tr>
        <tr>
            <th>내용</th>
            <th>{{content}}</th>
        </tr>
        </tbody>
        <tfoot>
        <tr>
            <th></th>
            <td><a class="btn btn-info" href="/articles/edit/{{id}}">수정</a></td>
        </tr>
        </tfoot>
    {{/articles}}
</table>
<a href="/articles" class="btn btn-success btn-block">목록으로</a>
{{>layouts/footer}}